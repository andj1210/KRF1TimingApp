<UserControl x:Class="adjsw.F12025.CarStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:adjsw.F12025"
             mc:Ignorable="d" 
             Height="500" Width="365">
    <Canvas x:Name="canv">
        <Canvas.Style>
            <Style>
                <Setter Property="TextBlock.FontSize" Value="20" />
                <Setter Property="TextBlock.FontFamily" Value="Courier New"/>
                <Setter Property="TextBlock.FontWeight" Value="Bold" />
            </Style>
        </Canvas.Style>
        <TextBox x:FieldModifier="public" Name="txt_penalty" Canvas.Left="155" Canvas.Top="445" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center">0 s</TextBox>
        <Image x:Name="img_car" Source="img/formulacar.png" Height="222" Width="438" Canvas.Left="-42" Panel.ZIndex="-1" RenderTransformOrigin="0.5,0.5" Canvas.Top="108" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="270"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBox x:FieldModifier="public" Name="txt_tyre_fl" Width="40" Height="35" Canvas.Left="88" Canvas.Top="74" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center">100</TextBox>
        <TextBox x:FieldModifier="public" Name="txt_tyre_fr" Width="40" Height="35" Canvas.Left="228" Canvas.Top="74" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center">100</TextBox>
        <TextBox x:FieldModifier="public" Name="txt_tyre_rl" Width="40" Height="35" Canvas.Left="88" Canvas.Top="340" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" Name="txt_tyre_rr" Width="40" Height="35" Canvas.Left="228" Canvas.Top="340" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" Name="txt_wing_fl" Width="40" Height="25" Canvas.Left="119" Canvas.Top="17" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_wing_fr" Width="40" Height="25" Canvas.Left="195" Canvas.Top="17" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_engine" Width="64" Height="70" Canvas.Left="146" Canvas.Top="256" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_fl_surface" Width="70" Height="35" Canvas.Top="54" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="14"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_fl_inner" Width="70" Height="35" Canvas.Top="98" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="14"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_fr_surface" Width="70" Height="35" Canvas.Left="277" Canvas.Top="54" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_fr_inner" Width="70" Height="35" Canvas.Left="277" Canvas.Top="98" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_rl_surface" Width="70" Height="35" Canvas.Top="320" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="14"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_rl_inner" Width="70" Height="35" Canvas.Top="362" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="14"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_rr_surface" Width="70" Height="35" Canvas.Left="277" Canvas.Top="320" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:FieldModifier="public" x:Name="txt_temp_rr_inner" Width="70" Height="35" Canvas.Left="277" Canvas.Top="362" RenderTransformOrigin="0.203,1.215" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100°C" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</UserControl>
