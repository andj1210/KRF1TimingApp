<Window x:Class="adjsw.F12025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adjsw.F12025"
        mc:Ignorable="d"
        Background="#FF383838"
        Title="t.b.d. src" Width="1280" Height="1024" KeyDown="OnKeyDown" x:Name="wnd" x:FieldModifier="public">
    <Window.Resources>
    </Window.Resources>
    <Grid Height="Auto">
        <Border Grid.Column="1" Grid.ColumnSpan="2" x:Name="m_infoBox" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" BorderBrush="Black" BorderThickness="3" Panel.ZIndex="1" MouseDown="m_infoBox_MouseDown">
            <StackPanel>
                <Image x:Name="m_imgInfo" Margin="10" Height="150" Source="/img/krf1.png"></Image>
                <TextBlock Margin="5" x:Name="m_infoTxt"  Foreground="Black" FontSize="16" FontWeight="Bold">LICENSE</TextBlock>
            </StackPanel>            
        </Border>
        <Grid x:Name="m_rootGrid" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.0"></RowDefinition>
                <RowDefinition Height="0.0"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8"></ColumnDefinition>
                <ColumnDefinition Width="0.2"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <local:PersonalLeaderboard x:Name="m_board" Visibility="Collapsed" HorizontalAlignment="Left" HorizontalContentAlignment="Left"></local:PersonalLeaderboard>
            <Border BorderBrush="Black" BorderThickness="1" x:Name="m_carStatusContainer">
                <local:CarStatusView Margin="20, 0, 0, 0" x:Name="m_carStatus" Width="450"></local:CarStatusView>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" x:Name="m_trackmapContainer">
                <local:Trackmap Margin="10, -10, 0, 0" x:Name="m_trackmap"></local:Trackmap>
            </Border>
        </Grid>
    </Grid>
</Window>
